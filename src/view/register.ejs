<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../public/styles/global.css" />
    <link rel="stylesheet" href="../public/styles/login.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Register</title>
  </head>

  <body>
    <main class="container">
      <form
        class="form"
        onsubmit="handleRegister(event); event.preventDefault();"
      >
        <img class="logo" src="/public/img/login.svg" alt="" />

        <div class="input-container">
          <label for="username">Username</label>
          <input type="text" placeholder="digite seu username" id="username" />
        </div>

        <div class="input-container">
          <label for="email">E-mail</label>
          <input type="text" placeholder="digite seu email" id="email" />
        </div>

        <div class="input-container">
          <label for="name">Nome</label>
          <input type="text" placeholder="digite seu nome" id="name" />
        </div>

        <div class="input-container">
          <label for="birthDate">Data de Nascimento</label>
          <input type="date" id="birthDate" />
        </div>

        <div class="input-container">
          <label for="password">Senha</label>
          <input type="password" placeholder="digite sua senha" id="password" />
        </div>

        <button class="btn-container" type="submit">Cadastrar</button>

        <div class="register-container">
          <span>JÃ¡ tem uma conta? <a href="/"> Entrar</a></span>
        </div>
      </form>

      <div class="image"></div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      async function handleRegister(e) {
        const username = document.querySelector("#username").value;
        const email = document.querySelector("#email").value;
        const name = document.querySelector("#name").value;
        const birthDate = document.querySelector("#birthDate").value;
        const password = document.querySelector("#password").value;

        const data = {
          username,
          email,
          name,
          birthDate,
          password,
        };

        const response = await axios.post("/auth/register", data);

        if (response.status === 200) {
          window.location.reload();
        }
      }
    </script>
  </body>
</html>
