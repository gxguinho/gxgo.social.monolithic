<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../public/styles/global.css" />
    <link rel="stylesheet" href="../public/styles/home.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Home</title>
  </head>
  <body>
    <div class="container">
      <%- include('./shared/sidebar', { username: model.username })%>

      <main class="notifications-container">
        <% model.notifications.forEach((notification)=>{ %>
        <div class="notifications-content">
          <img
            class="avatar-rounded"
            src="https://github.com/gxguinho.png"
            alt=""
          />

          <div>
            <a class="name"><%- notification.user.name %> </a>
            <span style="margin: 0 12px">-</span>
            <span class="username"><%- notification.user.username %></span>
            <p class="notification-message"><%- notification.content %></p>
          </div>
        </div>
        <% }) %>
      </main>

      <aside class="right-sidebar">
        <%- include('./shared/home/search.ejs')%>
      </aside>
    </div>
  </body>
</html>
